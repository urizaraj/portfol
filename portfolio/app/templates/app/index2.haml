- extends 'app/base.haml'
- load static

- block content
  .container.mt-3.mt-sm-5.mb-5.text-light(style="display: none")
    .row.mb-3
      .col
        %h1.display-2
          Alexander Urizar
    
    .row.mb-5
      .col
        %h1
          Located in Bridgeport, CT.
          Check me out on
          %span#linkedin.mr-2
            %a(href="https://www.linkedin.com/in/alexander-urizar-a8231b68")
              LinkedIn
              %i.fa.fa-linkedin-square(aria-hidden= "true") 
          %span#github.mr-2
            %a(href="https://github.com/urizaraj")
              Github
              %i.fa.fa-github(aria-hidden= "true")
          or shoot me an
          #email.mr-2.d-sm-inline
            %a(href="mailto:contact@urizaraj.com")
              email
              %i.fa.fa-envelope(aria-hidden= "true")

    #pheader.row.mb-3
      .col
        %h1.display-4
          Projects
          %i.fa.fa-angle-down#arrow

    #projects.row.mb-5
      .col
        .row
          %a.col-sm-6.right-border.p-3(href="{% url 'memory' %}")
            %h3 Memory
            %h5 can you remember where all the cards are?
          
          %a.col-sm-6.right-border.p-3.mt-3.mt-sm-0(href="{% url 'simon' %}")
            %h3 Simon
            %h5 a minimalistic simon says game
        
        .row.mt-3
          %a.col-sm-6.right-border.p-3(href="{% url 'tictac' %}")
            %h3 Tic Tac Toe
            %h5 play against a friend, or the computer
          
          %a.col-sm-6.right-border.p-3.mt-3.mt-sm-0(href="{% url 'timer' %}")
            %h3 Pomodoro Timer
            %h5 alternate between working and resting for maximum efficiency

        .row.mt-3
          %a.col-sm-6.right-border.p-3(href="{% url 'quote' %}")
            %h3 Quote Generator
            %h5 a simple small quote generator

    #aboutheader.row.mb-3
      .col
        %h1.display-4
          About
          %i.fa.fa-angle-up#arrow-2

    #about.row(style="display: none")
      .col
        %p.lead
          You can find the repository for this site
          %a(href="https://github.com/urizaraj/portfolio") here.